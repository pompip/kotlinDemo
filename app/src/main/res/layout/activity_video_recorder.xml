<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VideoRecorderActivity">
    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/recorder_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.example.chong.kotlindemo.widget.RecorderControllerLayout
        android:id="@+id/record_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/recorder_preview" />

</android.support.constraint.ConstraintLayout>