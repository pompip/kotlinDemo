<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LocalVideoPlayActivity">

    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/tx_video_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true" />
    <com.example.chong.kotlindemo.widget.VideoControllerLayout
        android:id="@+id/video_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tx_video_view" />

    <android.support.v7.widget.RecyclerView
        android:background="@color/black"
        android:paddingTop="10dp"
        android:clipToPadding="false"
        android:id="@+id/video_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tx_video_view" />

</RelativeLayout>